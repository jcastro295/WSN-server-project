<div id="wrapper"></div>
<div id="container">
  {{#if errors}}
    <section class="errors-contact">
      <h2>Please try again</h2>
      <ul>
        <li>{{errors}}</li>
      </ul>
    </section>
  {{/if}}
  <div class="contact-form-wrap">
    {{#if success}}
      <div class="contact-tab">
        <h2 class="contact-title signup-tab">Please check you email</h2>
      </div>
      <div class="content-form">
        <p>Hello, {{data.name}}!</p>
        <p>An e-mail has been sent to <strong>{{data.email}}</strong> with further instructions.</p>
        <p>Click on the button below to go back</p>
        <a id="home-button" href="/users">Return</a>
      </div><!--.tabs-content-->
    {{else}}
      <div class="contact-tab">
        <h2 class="contact-title signup-tab">Please enter your email or usermane</h2>
      </div>
      <div class="content-form">
        <form class="contact-form" action="/users/identify" method="post" >
          <span class="w-input" id="w-name"><input type="text" class="input" autocomplete="off" placeholder="Username or email" name="r_username" required></span>
          <input type="submit" class="button" value="Submit">
        </form><!--.login-form-->
      </div><!--.tabs-content-->
    {{/if}}
  </div><!--.form-wrap-->
</div>

