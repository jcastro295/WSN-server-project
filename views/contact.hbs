<header class="header">
  <h3><a href="./contact" class="logo">Contact <span>us</span></a></h3>
  <input class="menu-btn" type="checkbox" id="menu-btn" />
  <label class="menu-icon" for="menu-btn"><span class="navicon"></span></label>
  <ul class="menu">
    <li><a href="/">Home</a></li>
    <li><a href="/about">About</a></li>
    <li><a href="/contact">Contact</a></li>
    <li><a href="/users">Login</a></li>
  </ul>
</header>

<div id="wrapper"></div>
<div id="container">
  {{#if errors}}
    <section class="errors-contact">
      <h2>Please try again</h2>
      <ul>
        {{#each errors}}
          <li> {{this.msg}} </li>
        {{/each}}
      </ul>
    </section>
  {{/if}}
  <div class="contact-form-wrap">
    {{#if success}}
      <div class="contact-tab">
        <h2 class="contact-title signup-tab">Your message has been sent!</h2>
      </div>
      <div class="content-form">
        <p>Hello, {{data.name}}!</p>
        <p>Your message has been processed, we will contact you back at <strong>{{data.email}}</strong> or at <strong>{{data.cellphone}}</strong> as soon as possible.</p>
        <p>Click on the button below to go back</p>
        <a id="home-button" href="/contact">Return</a>
      </div><!--.tabs-content-->
    {{else}}
      <div class="contact-tab">
        <h2 class="contact-title signup-tab">Send us a message!</h2>
      </div>
      <div class="content-form">
        <form class="contact-form" action="/contact/form" method="post" >
          <span class="w-input" id="w-name"><input type="text" class="input" id="name" autocomplete="off" placeholder="Name" name="name" required></span>
          <span class="w-input" id="w-cellphone"><input type="text" class="input" id="cellphone" autocomplete="off" placeholder="Cellphone" name="cellphone" required></span>
          <span class="w-input" id="w-user_email"><input type="email" class="input" id="user_email" autocomplete="off" placeholder="Email" name="email" required></span>
          <span class="w-input" id="w-comment"><textarea rows="4" cols="50" fmaxlength="1000" class="input" id= "comment" name="comment" placeholder="Enter text here..." required></textarea></span>
          <input type="submit" class="button" value="Submit">
        </form><!--.login-form-->
      </div><!--.tabs-content-->
    {{/if}}
  </div><!--.form-wrap-->
</div>

